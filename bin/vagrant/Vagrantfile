Vagrant::Config.run do |config|

  # Use Ubuntu 32bit base box
  # More: http://www.vagrantbox.es/
  config.vm.box = "precise32"

  # Fetch the box if not loaded
  config.vm.box_url = "http://files.vagrantup.com/precise32.box"

  # Assign the guest a static IP
  config.vm.network :hostonly, "77.77.77.10"

  # Forward port 8080 on the host to port 80 on the guest
  config.vm.forward_port 80, 8080

  # Mount the project root folder inside the guest
  config.vm.share_folder "rax", "/home/vagrant/rax", "../../", :extra => "dmode=755,fmode=644"

  config.vm.provision :chef_solo do |chef|
    # Execute our custom recipe
    chef.add_recipe "server"
  end
end
